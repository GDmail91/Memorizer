<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/colorPrimary" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/info_bar"
        android:layout_toLeftOf="@+id/info_bar"
        android:gravity="center_vertical"
        android:text="메모"
        android:textColor="@color/black"
        android:background="@color/colorPrimary"
        android:id="@+id/memo_content" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/info_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/colorAccent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/setting"
                style="?android:attr/borderlessButtonStyle"
                android:scaleType="fitCenter"
                android:id="@+id/setting_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/colorAccent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="간격"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:id="@+id/memo_term"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/colorAccent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="기간"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="일/월"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/memo_during"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/colorAccent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="알림시간"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="09:00 am"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/memo_time"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/colorAccent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="등록한 날짜"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="2016-03-13"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/memo_posted"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>