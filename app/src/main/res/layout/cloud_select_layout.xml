<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="270dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@color/memoPadPrimary">

    <RelativeLayout
        android:id="@+id/progresscircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_centerInParent="true"
            android:theme="@style/MyMaterialTheme"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/cloud_select_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:padding="5dp"
            android:background="@drawable/ripple_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/dropbox_btn">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/dropbox_logo"/>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/not_connected"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:id="@+id/dropbox_linked"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/dropbox_linked"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:id="@+id/dropbox_id"/>
            </RelativeLayout>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:visibility="gone"
                android:background="@color/red"
                android:scaleType="fitCenter"
                android:src="@drawable/unlink_white"
                android:id="@+id/dropbox_unlink"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:padding="5dp"
            android:background="@drawable/ripple_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/google_drive_btn">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/google_drive_logo"/>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/not_connected"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:id="@+id/google_drive_linked"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/google_drive_linked"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:id="@+id/google_drive_id"/>
            </RelativeLayout>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:visibility="gone"
                android:background="@color/red"
                android:scaleType="fitCenter"
                android:src="@drawable/unlink_white"
                android:id="@+id/google_drive_unlink"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:padding="5dp"
            android:background="@drawable/ripple_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/one_drive_btn">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/one_drive_logo"/>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/not_connected"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:id="@+id/one_drive_linked"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/one_drive_linked"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:id="@+id/one_drive_id"/>
            </RelativeLayout>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:visibility="gone"
                android:background="@color/red"
                android:scaleType="fitCenter"
                android:src="@drawable/unlink_white"
                android:id="@+id/one_drive_unlink"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/cloud_select_box"
        style="?attr/borderlessButtonStyle"
        android:background="@drawable/ripple_button"
        android:text="@string/ok"
        android:textColor="@color/memoPadAccent"
        android:id="@+id/ok_btn" />
</RelativeLayout>